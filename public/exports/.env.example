# ==============================================================================
# KPM - KIMBO Procurement Management
# Configuration d'environnement pour déploiement IKOMA MCP
# ==============================================================================

# ------------------------------------------------------------------------------
# SUPABASE / BASE DE DONNÉES
# ------------------------------------------------------------------------------
# URL de l'API Supabase (self-hosted ou cloud)
SUPABASE_URL=https://api.kpm.votredomaine.com

# Clé anonyme (publique) - pour le frontend
SUPABASE_ANON_KEY=votre_anon_key_ici

# Clé service role (SECRÈTE) - pour les edge functions
# ⚠️ NE JAMAIS EXPOSER CETTE CLÉ AU FRONTEND
SUPABASE_SERVICE_ROLE_KEY=votre_service_role_key_ici

# Configuration PostgreSQL directe (pour scripts de migration)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=votre_mot_de_passe_postgres

# JWT Secret pour génération des tokens (min 32 caractères)
JWT_SECRET=votre_jwt_secret_de_minimum_32_caracteres_aleatoires

# ------------------------------------------------------------------------------
# FRONTEND (Variables VITE_*)
# ------------------------------------------------------------------------------
VITE_SUPABASE_URL=https://api.kpm.votredomaine.com
VITE_SUPABASE_PUBLISHABLE_KEY=votre_anon_key_ici
VITE_SUPABASE_PROJECT_ID=kpm-local

# ------------------------------------------------------------------------------
# APPLICATION
# ------------------------------------------------------------------------------
# URL du site frontend
SITE_URL=https://kpm.votredomaine.com

# Port du serveur de développement
PORT=3000

# Environnement: development | staging | production
NODE_ENV=production

# ------------------------------------------------------------------------------
# EMAIL (SMTP) - Optionnel mais recommandé
# ------------------------------------------------------------------------------
SMTP_HOST=smtp.votrefournisseur.com
SMTP_PORT=587
SMTP_USER=noreply@votredomaine.com
SMTP_PASS=votre_mot_de_passe_smtp
SMTP_SENDER_NAME=KPM
SMTP_SENDER_EMAIL=noreply@votredomaine.com

# ------------------------------------------------------------------------------
# SUPABASE DASHBOARD (Self-hosted uniquement)
# ------------------------------------------------------------------------------
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=votre_mot_de_passe_dashboard

# ------------------------------------------------------------------------------
# STORAGE
# ------------------------------------------------------------------------------
# URL du stockage fichiers (S3 compatible ou Supabase Storage)
STORAGE_URL=https://api.kpm.votredomaine.com/storage/v1

# ------------------------------------------------------------------------------
# SÉCURITÉ
# ------------------------------------------------------------------------------
# Clé de chiffrement pour données sensibles (32 caractères)
ENCRYPTION_KEY=votre_cle_de_chiffrement_32_chars

# Durée de session (en secondes) - défaut 1 semaine
SESSION_DURATION=604800

# ------------------------------------------------------------------------------
# OBSERVABILITÉ (Optionnel)
# ------------------------------------------------------------------------------
# Niveau de log: debug | info | warn | error
LOG_LEVEL=info

# Activer les logs structurés JSON
LOG_JSON=true
